---
import { splitString } from "../utils";

interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
const [firstPart, lastWord] = splitString(title);
---

<h6 class="pt-10">{subtitle}</h6>
<h3>
  <strong>{firstPart} <span class="text-highlight">{lastWord}</span></strong>
</h3>
